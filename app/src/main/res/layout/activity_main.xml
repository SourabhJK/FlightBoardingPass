<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.felight.flightboardingpass.MainActivity"
    android:background="@drawable/grey">

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Name"
           android:gravity="left"
           android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:id="@+id/tvNameDisplay"
           android:layout_marginTop="16dp"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="left"
           android:textSize="15dp"
           android:id="@+id/etName"
           android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvNameDisplay"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
           android:gravity="left"
            android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:id="@+id/tvDOB"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/etName"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
           android:textSize="15dp"
           android:inputType="date"
            android:id="@+id/etDOB"
           android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvDOB"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:gravity="left"
           android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:id="@+id/tvContactNumber"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/etDOB"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
           android:textSize="15dp"
           android:inputType="number"
            android:id="@+id/etContactNumber"
           android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvContactNumber"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />


       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:gravity="left"
           android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:id="@+id/tvEmailId"
           app:layout_constraintTop_toBottomOf="@+id/etContactNumber"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="8dp" />

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
           android:textSize="15dp"
           android:inputType="textEmailAddress"
            android:id="@+id/etMailId"
           android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvEmailId"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />


       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:gravity="left"
           android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:id="@+id/tvPassword"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/etMailId"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
           android:textSize="15dp"
            android:id="@+id/etPassword"
            android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvPassword"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />


       <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:gravity="left"
            android:textSize="15dp"
           android:textColor="@color/colorAccent"
           app:layout_constraintTop_toBottomOf="@+id/etPassword"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="8dp"
           android:id="@+id/tvConfirmPassword" />

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15dp"
           android:id="@+id/etConfirmPassword"
            android:textColor="@color/colorAccent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/tvConfirmPassword"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp" />

       <Button
            android:layout_width="88dp"
            android:layout_height="wrap_content"
           android:onClick="register"
            android:text="Register"
            android:textColor="@android:color/holo_orange_dark"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginBottom="16dp"
           android:layout_marginStart="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="16dp"
           android:layout_marginEnd="16dp"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
